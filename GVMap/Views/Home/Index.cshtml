@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/themes/core/site.css" rel="stylesheet">
    <link href="~/Content/themes/core/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/themes/core/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/themes/core/bootstrap-responsive.min.css" rel="stylesheet">

    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="897699287253-ovbrrlh0q2ultb1f0qf6hsg6slt8allc.apps.googleusercontent.com">
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Google Maps</a>
    </div>
  </div><!-- /.container-fluid -->
</nav>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @using (Html.BeginForm("UpsertMarker", "Home", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
                {
                    <input type="hidden" name="id" id="id" />
                    <div class="form-group">
                        <label for="user">
                            Потребител
                        </label>
                        <span class="input-group-addon" id="user-name">Анонимен</span>
                        <input type="hidden" name="user" id="user" value="Анонимен">
                        <br />
                        <div class="g-signin2" data-onsuccess="onSignIn"></div>
                    </div>
                    <div class="form-group">
                        <label for="coordinates">
                            Координати</label>
                        <input type="text" class="form-control" id="coordinates" name="coordinates">
                    </div>
                    <div class="form-group">
                        <label for="description">
                            Описание</label>
                        <textarea class="form-control" id="description" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="file">
                            File input</label>
                        <input type="file" id="file" name="file">
                    </div>

                    <button class="btn btn-default" type="submit">
                        Запис
                    </button>

                }
            </div>
            <div class="col-md-9">
                <div id="googleMap">
                </div>
            </div>
        </div>
    </div>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDri_CEdbWJuw3Uieks9aiDPEhsSD9_cxg&sensor=false"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/core.js" type="text/javascript"></script>
    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text">Софтуерни системи, базирани на услуги 2015</p>
        </div>
    </div>
</body>
</html>
